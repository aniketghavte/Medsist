<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    tools:context=".Pat_Profile">

    <ImageView
        android:id="@+id/idSaveBtn"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:padding="@dimen/_5sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/save"
        android:layout_gravity="right"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_imageInSetting"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center"
        android:src="@drawable/profile"
        app:civ_border_width="4dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/idEmailInProfile"
        android:textColor="@color/sanmarino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="@dimen/_15sdp"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30sdp"/>
    <EditText

        android:id="@+id/idSettingName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@drawable/edittextshape"
        android:gravity="center"
        android:minHeight="48dp"
        android:layout_margin="@dimen/_10sdp"
        android:text="name"
        android:textColor="@color/saffron"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold" />

    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30sdp"/>
    <EditText

        android:id="@+id/idSettingStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:background="@drawable/edittextshape"
        android:gravity="center"
        android:minHeight="48dp"
        android:textColor="@color/saffron"
        android:text="Hello There"
        android:textSize="@dimen/_12sdp"
        android:textStyle="normal" />


